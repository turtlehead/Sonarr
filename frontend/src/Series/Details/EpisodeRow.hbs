{{#if monitored}}
  <td class="episode-monitored x-episode-monitored" title="Episode monitored, click to unmonitor">
    <i class="icon-sonarr-monitored"></i>
  </td>
{{else}}
  <td class="episode-monitored x-episode-monitored" title="Episode unmonitored, click to monitor">
    <i class="icon-sonarr-unmonitored"></i>
  </td>
{{/if}}

<td class="episode-number">
  {{episodeNumber}}
  {{#if_eq seriesType compare="anime"}}
    {{#if absoluteEpisodeNumber}}({{absoluteEpisodeNumber}}){{/if}}
  {{/if_eq}}
</td>

<td class="episode-title x-episode-title">
  {{episodeTitle .}}
</td>

<td class="episode-air-date relative-date">{{relativeDate airDateUtc}}</td>

<td class="episode-status">{{episodeStatus .}}</td>

<td class="episode-actions actions">
  <i class="icon-sonarr-search x-automatic-search" title="Automatic Search"></i>
  <a href="/episode/{{id}}/search/manual">
    <i class="icon-sonarr-search-manual x-manual-search" title="Manual Search"></i>
  </a>
</td>
