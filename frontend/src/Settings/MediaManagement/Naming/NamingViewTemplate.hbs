<fieldset>
    <legend>Episode Naming</legend>

    <div class="form-group">
        <label class="settings-label control-label">Rename Episodes</label>
        <div class="settings-control">
            <div class="checkbox c-checkbox">
                <label>
                    <input type="checkbox" name="renamingEpisodes">
                    <span class="check fa fa-check"></span>
                    <span class="help-block help-block-warning">Sonarr will use the existing file name if set to no</span>
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="settings-label control-label">Replace Illegal Characters</label>
        <div class="settings-control">
            <div class="checkbox c-checkbox">
                <label>
                    <input type="checkbox" name="replaceIllegalCharacters">
                    <span class="check fa fa-check"></span>
                    <span class="help-block help-block-warning">Replace or Remove illegal characters</span>
                </label>
            </div>
        </div>
    </div>

    <div class="x-naming-options">
        <div class="basic-setting x-basic-naming"></div>

        <div class="form-group advanced-setting">
            <label class="settings-label control-label">Standard Episode Format</label>
            <div class="settings-control settings-control-lg">
                <div class="input-group x-helper-input">
                    <input type="text" class="form-control naming-format" name="standardEpisodeFormat" data-onkeyup="true" />
                    <div class="input-group-btn btn-group x-naming-token-helper">
                        <button class="btn btn-icon-only dropdown-toggle" data-toggle="dropdown">
                            <i class="icon-sonarr-add"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-right">
                            {{> SeriesTitleNamingPartial}}
                            {{> SeasonNamingPartial}}
                            {{> EpisodeNamingPartial}}
                            {{> EpisodeTitleNamingPartial}}
                            {{> QualityNamingPartial}}
                            {{> MediaInfoNamingPartial}}
                            {{> ReleaseGroupNamingPartial}}
                            {{> OriginalTitleNamingPartial}}
                            {{> SeparatorNamingPartial}}
                        </ul>
                    </div>
                </div>
                <span class="help-block">Use all caps or all lowercase to transform the text                 <a href="https://github.com/NzbDrone/NzbDrone/wiki/Sorting-and-Renaming" class="help-link">More information</a></span>
            </div>
        </div>

        <div class="form-group advanced-setting">
            <label class="settings-label control-label">Daily Episode Format</label>
            <div class="settings-control settings-control-lg">
                <div class="input-group x-helper-input">
                    <input type="text" class="form-control naming-format" name="dailyEpisodeFormat" data-onkeyup="true" />
                    <div class="input-group-btn btn-group x-naming-token-helper">
                        <button class="btn btn-icon-only dropdown-toggle" data-toggle="dropdown">
                            <i class="icon-sonarr-add"></i>
                        </button>
                        <ul class="dropdown-menu">
                            {{> SeriesTitleNamingPartial}}
                            {{> AirDateNamingPartial}}
                            {{> SeasonNamingPartial}}
                            {{> EpisodeNamingPartial}}
                            {{> EpisodeTitleNamingPartial}}
                            {{> QualityNamingPartial}}
                            {{> MediaInfoNamingPartial}}
                            {{> ReleaseGroupNamingPartial}}
                            {{> OriginalTitleNamingPartial}}
                            {{> SeparatorNamingPartial}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group advanced-setting">
            <label class="settings-label control-label">Anime Episode Format</label>
            <div class="settings-control settings-control-lg">
                <div class="input-group x-helper-input">
                    <input type="text" class="form-control naming-format" name="animeEpisodeFormat" data-onkeyup="true" />
                    <div class="input-group-btn btn-group x-naming-token-helper">
                        <button class="btn btn-icon-only dropdown-toggle" data-toggle="dropdown">
                            <i class="icon-sonarr-add"></i>
                        </button>
                        <ul class="dropdown-menu">
                            {{> SeriesTitleNamingPartial}}
                            {{> AbsoluteEpisodeNamingPartial}}
                            {{> SeasonNamingPartial}}
                            {{> EpisodeNamingPartial}}
                            {{> EpisodeTitleNamingPartial}}
                            {{> QualityNamingPartial}}
                            {{> MediaInfoNamingPartial}}
                            {{> ReleaseGroupNamingPartial}}
                            {{> OriginalTitleNamingPartial}}
                            {{> SeparatorNamingPartial}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group advanced-setting">
        <label class="settings-label control-label">Series Folder Format</label>

        <div class="settings-control settings-control-lg">
            <div class="input-group x-helper-input">
                <input type="text" class="form-control naming-format" name="seriesFolderFormat" data-onkeyup="true"/>
                <div class="input-group-btn btn-group x-naming-token-helper">
                    <button class="btn btn-icon-only dropdown-toggle" data-toggle="dropdown">
                        <i class="icon-sonarr-add"></i>
                    </button>
                    <ul class="dropdown-menu">
                        {{> SeriesTitleNamingPartial}}
                    </ul>
                </div>
            </div>
            <span class="help-block">Only used when adding a new series.</span>
        </div>
    </div>

    <div class="form-group">
        <label class="settings-label control-label">Season Folder Format</label>

        <div class="settings-control settings-control-lg">
            <div class="input-group x-helper-input">
                <input type="text" class="form-control naming-format" name="seasonFolderFormat" data-onkeyup="true"/>
                <div class="input-group-btn btn-group x-naming-token-helper">
                    <button class="btn btn-icon-only dropdown-toggle" data-toggle="dropdown">
                        <i class="icon-sonarr-add"></i>
                    </button>
                    <ul class="dropdown-menu">
                        {{> SeriesTitleNamingPartial}}
                        {{> SeasonNamingPartial}}
                        {{> SeparatorNamingPartial}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="x-naming-options">
        <div class="form-group">
            <label class="settings-label control-label">Multi-Episode Style</label>

            <div class="settings-control">
                <select class="form-control x-multi-episode-style" name="multiEpisodeStyle">
                    <option value="0">Extend</option>
                    <option value="1">Duplicate</option>
                    <option value="2">Repeat</option>
                    <option value="3">Scene</option>
                    <option value="4">Range</option>
                    <option value="5">Prefixed Range</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="settings-label control-label">Single Episode Example</label>

        <div class="settings-control settings-control-lg">
            <p class="form-control-static x-single-episode-example naming-example"></p>
        </div>
    </div>

    <div class="form-group">
        <label class="settings-label control-label">Multi-Episode Example</label>

        <div class="settings-control settings-control-lg">
            <p class="form-control-static x-multi-episode-example naming-example"></p>
        </div>
    </div>

    <div class="form-group">
        <label class="settings-label control-label">Daily-Episode Example</label>

        <div class="settings-control settings-control-lg">
            <p class="form-control-static x-daily-episode-example naming-example"></p>
        </div>
    </div>

    <div class="form-group">
        <label class="settings-label control-label">Anime Episode Example</label>
        <div class="settings-control settings-control-lg">
            <p class="form-control-static x-anime-episode-example naming-example"></p>
        </div>
    </div>

    <div class="form-group">
        <label class="settings-label control-label">Anime Multi-Episode Example</label>

        <div class="settings-control settings-control-lg">
            <p class="form-control-static x-anime-multi-episode-example naming-example"></p>
        </div>
    </div>

    <div class="form-group">
        <label class="settings-label control-label">Series Folder Example</label>

        <div class="settings-control settings-control-lg">
            <p class="form-control-static x-series-folder-example naming-example"></p>
        </div>
    </div>

    <div class="form-group">
        <label class="settings-label control-label">Season Folder Example</label>

        <div class="settings-control settings-control-lg">
            <p class="form-control-static x-season-folder-example naming-example"></p>
        </div>
    </div>
</fieldset>
