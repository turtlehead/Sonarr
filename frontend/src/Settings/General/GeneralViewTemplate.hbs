<div class="form-horizontal">
    <fieldset>
        <legend>Start-Up</legend>

        <div class="form-group advanced-setting">
            <label class="col-sm-2 control-label">Bind Address</label>
            <div class="col-sm-6 col-md-4 col-lg-2">
                <input type="text" name="bindAddress" class="form-control" />
                <span class="help-block">Valid IP4 address or '*' for all interfaces</span>
                <span class="help-block help-block-warning">Requires restart to take effect</span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Port Number</label>
            <div class="col-sm-6 col-md-4 col-lg-2">
                <input type="number" placeholder="8989" name="port" class="form-control"/>
                <span class="help-block">Requires restart to take effect</span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">URL Base</label>
            <div class="col-sm-6 col-md-4 col-lg-2">
                <input type="text" name="urlBase" class="form-control"/>
                <span class="help-block">For reverse proxy support, default is empty</span>
                <span class="help-block help-block-warning">Requires restart to take effect</span>
            </div>
        </div>

        <div class="form-group advanced-setting">
            <label class="col-sm-2 control-label">Enable SSL</label>
            <div class="col-sm-6 col-md-4 col-lg-2">
                <div class="checkbox c-checkbox">
                    <label>
                        <input type="checkbox" name="enableSsl">
                        <span class="check fa fa-check"></span>
                        <span class="help-block help-block-warning">Requires restart running as administrator to take effect</span>
                    </label>
                </div>
            </div>
        </div>

        <div class="x-ssl-options">
            <div class="form-group advanced-setting">
                <label class="col-sm-2 control-label">SSL Port Number</label>
                <div class="col-sm-6 col-md-4 col-lg-2">
                    <input type="number" placeholder="8989" name="sslPort" class="form-control"/>
                </div>
            </div>

            {{#if_windows}}
            <div class="form-group advanced-setting">
                <label class="col-sm-2 control-label">SSL Cert Hash</label>
                <div class="col-sm-6 col-md-4 col-lg-2">
                    <input type="text" name="sslCertHash" class="form-control"/>
                </div>
            </div>
            {{/if_windows}}
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Open browser on start</label>
            <div class="col-sm-6 col-md-4 col-lg-2">
                <div class="checkbox c-checkbox">
                    <label>
                        <input type="checkbox" name="launchBrowser">
                        <span class="check fa fa-check"></span>
                        <span class="help-block">Open a web browser and navigate to Sonarr homepage on app start. Has no effect if installed as a windows service</span>
                    </label>
                </div>
            </div>
        </div>
    </fieldset>

    <fieldset>
        <legend>Security</legend>
        <div class="form-group">
            <label class="col-sm-2 control-label">Authentication</label>
            <div class="col-sm-6 col-md-4 col-lg-2">
                <select name="authenticationMethod" class="form-control x-auth">
                    <option value="none">None</option>
                    <option value="basic">Basic (Browser popup)</option>
                    <option value="forms">Forms (Login page)</option>
                </select>
                <span class="help-block">Require Username and Password to access Sonarr</span>
                <span class="help-block help-block-warning">Requires restart to take effec</span>
            </div>
        </div>

        <div class="x-auth-options">
            <div class="form-group">
                <label class="col-sm-2 control-label">Username</label>
                <div class="col-sm-6 col-md-4 col-lg-2">
                    <input type="text" placeholder="Username" name="username" class="form-control"/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Password</label>
                <div class="col-sm-6 col-md-4 col-lg-2">
                    <input type="password" name="password" class="form-control"/>
                </div>
            </div>
        </div>

        <div class="form-group api-key">
            <label class="col-sm-2 control-label">API Key</label>
            <div class="col-sm-6 col-md-4 col-lg-2">
                <div class="input-group">
                    <input type="text" name="apiKey" readonly="readonly" class="form-control x-api-key"/>
                    <div class="input-group-btn">
                        <button class="btn btn-icon-only x-copy-api-key hidden-xs"><i class="icon-sonarr-copy"></i></button>
                        <button class="btn btn-danger btn-icon-only x-reset-api-key" title="Reset API Key"><i class="icon-sonarr-refresh"></i></button>
                    </div>
                </div>
                <span class="help-block help-block-warning">Requires restart to take effect</span>
            </div>
        </div>
    </fieldset>

    <fieldset>
        <legend>Logging</legend>

        <div class="form-group">
            <label class="col-sm-2 control-label">Log Level</label>
            <div class="col-sm-6 col-md-4 col-lg-2">
                <select name="logLevel" class="form-control">
                    <option value="Trace">Trace</option>
                    <option value="Debug">Debug</option>
                    <option value="Info">Info</option>
                </select>
                <span class="help-block help-block-warning">Trace logging should only be enabled temporarily</span>
            </div>
        </div>
    </fieldset>
    <fieldset>
        <legend>Analytics</legend>

        <div class="form-group">
            <label class="col-sm-2 control-label">Enable</label>
            <div class="col-sm-6 col-md-4 col-lg-2">
                <div class="checkbox c-checkbox">
                    <label>
                        <input type="checkbox" name="analyticsEnabled">
                        <span class="check fa fa-check"></span>
                        <span class="help-block">Send anonymous information about your browser and which parts of the web interface you use to Sonarr servers. We use this information to prioritize features and browser support. We will NEVER include any personal information or any information that could identify you.</span>
                        <span class="help-block help-block-warning">Requires restart to take effect</span>
                    </label>
                </div>
            </div>
        </div>
    </fieldset>

    <fieldset class="advanced-setting">
        <legend>Updates</legend>

        <div class="form-group">
            <label class="col-sm-2 control-label">Branch</label>
            <div class="col-sm-6 col-md-4 col-lg-2">
                <input type="text" placeholder="master" name="branch" class="form-control"/>
            </div>
        </div>

        {{#if_mono}}
        <div class="alert alert-warning">Please see: <a href="https://github.com/NzbDrone/NzbDrone/wiki/Updating">the wiki</a> for more information</div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Automatic</label>
            <div class="col-sm-6 col-md-4 col-lg-2">
                <div class="checkbox c-checkbox">
                    <label>
                        <input type="checkbox" name="updateAutomatically">
                        <span class="check fa fa-check"></span>
                        <span class="help-block">Automatically download and install updates. You will still be able to install from System: Updates</span>
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Mechanism</label>
            <div class="col-sm-6 col-md-4 col-lg-2">
                <select name="updateMechanism" class="form-control x-update-mechanism">
                    <option value="builtIn">Built-in</option>
                    <option value="script">Script</option>
                </select>
                <span class="help-block">Use built-in updater or external script</span>
            </div>
        </div>

        <div class="form-group x-script-group">
            <label class="col-sm-2 control-label">Script Path</label>
            <div class="col-sm-6 col-md-4 col-lg-2">
                <input type="text" name="updateScriptPath" class="form-control"/>
                <span class="help-block">Path to a custom script that take an extracted update package and handle the remainder of the update process</span>
            </div>
        </div>
        {{/if_mono}}
    </fieldset>
</div>
