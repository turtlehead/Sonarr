<div class="fullscreen-modal">
    <div class="fullscreen-modal-header">
        <button type="button" class="close x-close"><i class="icon-sonarr-close-modal"></i></button>
        {{#if id}}
        <h3>Edit</h3>
        {{else}}
        <h3>Add</h3>
        {{/if}}
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            <div id="x-fields"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Qualities</label>

                <div class="col-sm-9 col-md-7 col-lg-5">
                    <div class="controls qualities-controls">
                        <span id="x-qualities"></span>
                    </div>
                    <span class="help-block">Qualities higher in the list are more preferred. Only checked qualities will be wanted.</span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        {{#if id}}
        <button class="btn btn-danger pull-left x-delete">Delete</button>
        {{/if}}
        <span class="indicator x-indicator"><i class="icon-sonarr-spinner fa-spin"></i></span>
        <button class="btn x-close">Cancel</button>
        <button class="btn btn-primary x-save">Save</button>
    </div>
</div>
