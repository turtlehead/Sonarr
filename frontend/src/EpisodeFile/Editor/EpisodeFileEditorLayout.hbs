<div class="fullscreen-modal edit-season-modal">
  <div class="fullscreen-modal-header">
    <button type="button" class="close x-close">
      <i class="icon-sonarr-close-modal"></i>
    </button>

    <h3>
      {{#if seasonNumber}}
        {{#if_eq seasonNumber compare="0"}}
          {{series.title}} - Specials
        {{else}}
          {{series.title}} - Season {{seasonNumber}}
        {{/if_eq}}
      {{else}}
        {{series.title}}
      {{/if}}
    </h3>

  </div>
  <div class="fullscreen-modal-body">
    <div class="x-episode-list"></div>
    <div class="x-quality"></div>
  </div>
  <div class="modal-footer">
    <button class="btn btn-danger x-delete-files">Delete Files</button>
    <button class="btn btn-default x-close">Close</button>
  </div>
</div>
