<div class="fullscreen-modal">
  <div class="fullscreen-modal-header">
    <button type="button" class="close x-close"><i class="icon-sonarr-close-modal"></i></button>
    <h1>{{titleWithYear }}</h1>
  </div>
  <div class="fullscreen-modal-body add-series-modal">
    <div class="row">
      <div class="hidden-sm col-md-3 ">
        <a href="{{tvdbUrl}}" target="_blank">
                    {{poster }}
                </a>
      </div>
      <div class="col-sm-12 col-md-9">
        <div class="row">
          <div class="col-xs-12 overview">
            {{overview}}
          </div>
        </div>
        <div class="row new-series-overview x-overview">
          <div class="col-md-12 overview-internal">
            <span class="label label-default">{{network}}</span>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <form class="form-horizontal">
              <div class="form-group">
                <label class="control-label">Path</label>
                <div class="control-input">
                  {{> ../RootFolders/RootFolderSelectionPartial.hbs rootFolders}}
                </div>
              </div>
              <div class="form-group">
                <label class="control-label">Monitor
                  <i class="icon-sonarr-form-info monitor-tooltip x-monitor-tooltip"></i>
                </label>
                <div class="control-input">
                  {{> ../MonitorSelectionPartial.hbs}}
                </div>
              </div>
              <div class="form-group">
                <label class="control-label">Profile</label>
                <div class="control-input">
                  {{> ../../Profile/ProfileSelectionPartial.hbs profiles}}
                </div>
              </div>
              <div class="form-group">
                <label class="control-label">Series Type</label>
                <div class="control-input">
                  {{> ../SeriesTypeSelectionPartial.hbs}}
                </div>
              </div>
              <div class="form-group">
                <label class="control-label">Season Folder</label>
                <div class="control-input">
                  <div class="checkbox c-checkbox">
                    <label>
                      <input type="checkbox" class="x-season-folder">
                      <span class="check fa fa-check"></span>
                    </label>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="fullscreen-modal-footer">
    <form class="form-inline">
      <div class="form-group">
        <div class="checkbox c-checkbox">
          <label>
            <input type="checkbox" class="x-start-search" /> Start search for missing episodes
            <span class="check fa fa-check"></span>
          </label>
        </div>
      </div>
      <button class="btn btn-success btn-add x-add">Add {{title}}</button>
    </form>
  </div>
</div>
